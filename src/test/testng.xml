<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="All Tests">
    <test name="All Tests">
        <classes>
            <class name="MainTest"/>
            <class name="ManTest"/>
            <class name="WomanTest"/>
        </classes>
    </test>

    <test name="SettersGettersTests">
        <classes>
            <class name="ManTest">
                <methods>
                    <include name="testGetFirstName"/>
                    <include name="testSetFirstName"/>
                    <include name="testGetLastName"/>
                    <include name="testSetLastName"/>
                    <include name="testGetAge"/>
                    <include name="testSetAge"/>
                </methods>
            </class>

            <class name="WomanTest">
                <methods>
                    <include name="testGetFirstName"/>
                    <include name="testSetFirstName"/>
                    <include name="testGetLastName"/>
                    <include name="testSetLastName"/>
                    <include name="testGetAge"/>
                    <include name="testSetAge"/>
                </methods>
            </class>

            <class name="MainTest">
                <methods>
                    <include name="testGetWomanPartnerFirstName"/>
                    <include name="testGetWomanPartnerLastName"/>
                    <include name="testGetWomanPartnerAge"/>
                </methods>
            </class>
        </classes>
    </test>
</suite>
